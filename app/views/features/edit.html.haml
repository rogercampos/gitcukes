%h1 Edit a feature

= form_tag update_feature_path(:file => @feature) do
  = text_area_tag "content", @feature.read, :rows => 20, :cols => 120, :id => "editor"
  %br
  = submit_tag "Update"


= link_to "Back", root_path

= content_for :custom_js do
  = javascript_include_tag "http://code.jquery.com/jquery-1.4.3.min.js"
  = javascript_include_tag "markitup/jquery.markitup.js"
  = javascript_include_tag "markitup/sets/default/set.js"
  <link rel="stylesheet" type="text/css" href="/javascripts/markitup/skins/markitup/style.css" />
  :javascript
    $('#editor').markItUp(mySettings);

:css
  .markItUpButton {
    display: none;
  }
  .markItUpSeparator {
    display: none;
  }

